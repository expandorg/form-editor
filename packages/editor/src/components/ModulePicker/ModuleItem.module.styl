@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';


hover()
  .container:hover &
    {block}

.container
  box-sizing: border-box;

  display: flex;
  align-items: stretch;
  justify-content: flex-start;

  height: 46px

  background-color: color-white
  margin-bottom: 10px
  border-radius: 5px;

  cursor pointer

  &:last-child
    margin-bottom: 0

.dragging
  opacity: 0.25;
  transform: translate(0, 0);

.miniIcon
  min-width: 35px
  line-height: 46px
  text-align: center;
  cursor: grab;

  background-color: color-medium-blue
  background-position: center;
  background-origin: border-box
  background-repeat: no-repeat


  border: 1px solid color-medium-blue
  border-top-left-radius: 5px
  border-bottom-left-radius: 5px

  +hover()
    background-color: lighten(color-medium-blue, 30%)
    border-color: lighten(color-medium-blue, 30%)

.name
  box-sizing: border-box;
  padding: 0 6px

  width: 100%;

  color: color-text-dark;
  font(small-text, 500, false, 46px)

  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

  +hover()
    color: lighten(color-text-dark, 20%)

.info
  box-sizing: border-box;
  line-height: 46px
  padding-right: 8px

.mark
  position relative
  opacity: 0
  top: 6px
  width: 20px
  height 20px
  transition: opacity 0.15s ease-in-out

  path
    fill: color-text-disabled

  .container:hover &
    opacity: 1

