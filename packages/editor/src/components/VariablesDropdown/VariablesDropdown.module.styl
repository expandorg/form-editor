@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.dropdown
  position: absolute
  top: 32px
  right: 0
  width: 220px

  background: color-white
  box-shadow: heavy-shadow
  z-index: 2

.list
  overflow: auto
  max-height: 300px

.item
  width: 100%
  height: 50px
  line-height: 50px

  padding-left: 25px
  box-sizing: border-box

  transition: background-color 0.4s cubic-bezier(.27,1.27,.48,.56);
  cursor: pointer
  text-align: left
  border: 0

  color: color-text-dark
  font(body, false, false, 40px)

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

  &:hover
    background-color: #E1F2EF;

.add
  box-sizing: border-box
  padding: 12px

.addBtn
  box-sizing: border-box
  width: 100%
  height 40px

  color: #25796A
  border: 1px solid color-teel-dark
  border-radius: 2px

  font(subtitle, false, false, 40px)
  text-transform: uppercase

  outline: none
  cursor pointer
