@import '~@expandorg/uikit/colors';

.container
  box-sizing: border-box
  width: 0
  min-width: 0
  transition: width 300ms ease-in, min-width, 300ms ease-in, opacity 300ms ease-in

  display: flex
  align-items: center
  justify-content: center
  opacity 0

  &.visible
    opacity 1
    width: 100%;
    flex-grow: 1
    max-width 500px

.panel
  box-sizing: border-box
  min-width: 450px
  position relative
  z-index 3
