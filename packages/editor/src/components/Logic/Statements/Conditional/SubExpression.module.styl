@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.container
  box-sizing: border-box

  margin-bottom: 16px
  min-height: 30px
  height: 30px

.dd
  margin-left: 15px
  width 40px

.add
  box-sizing: border-box

  width: 30px
  height 30px

  margin-left: 16px

  border: none
  border-radius: 15px
  padding: 0

  font(body, false, false, 28px)
  color: color-light-blue
  background-color: color-primary-blue

  outline: 0
  cursor pointer

  &:hover
    background-color: lighten(color-primary-blue, 10%)

.remove
  box-sizing: border-box;

  width: 16px
  height: 16px

  padding: 0
  margin-left: 10px

  background-color: transparent;

  cursor: pointer;
  outline: 0

  color: color-light-blue

  &:hover
    color: darken(color-light-blue, 20%)

