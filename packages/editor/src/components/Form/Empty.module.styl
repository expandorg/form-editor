@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.container
  box-sizing: border-box;
  padding: 20px 20px 30px

.content

  margin-top: 150px
  height 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;

.icon
  path
    fill: color-heavy-blue

.text
  box-sizing: border-box;
  padding: 20px 50px 50px

  font(body-bold)
  text-align: center;

  color: color-text-dark;

.placeholder
  width: 100%;
