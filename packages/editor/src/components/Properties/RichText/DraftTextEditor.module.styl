@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.toolbar
  box-sizing: border-box;
  margin-bottom: 20px

  display: flex;
  align-items: center;
  justify-content: flex-start;


  > *
    margin-right: 15px;

    &:last-child
      margin-right: 0;

.content
  box-sizing: border-box;
  position relative

  padding: 15px 15px;

  min-height: 240px

  border-radius: 5px;
  border: 1px solid color-text-heavy-blue
