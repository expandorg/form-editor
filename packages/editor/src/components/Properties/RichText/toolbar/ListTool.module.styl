@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  box-sizing: border-box;
  display: flex;
  align-items: center;

.btn
  position: relative;

  box-sizing: border-box;
  padding: 0

  width: 30px
  height: 30px

  outline: 0
  cursor: pointer;
  background-color: transparent

  path
    fill: color-text-heavy-blue

  &:hover
    path
      fill: color-text-blue
