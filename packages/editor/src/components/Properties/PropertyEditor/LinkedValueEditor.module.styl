@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.container
  margin-top: 36px

.inner
  display: flex
  justify-content: space-between
  align-items: center

.inputContainer
  width: 100%
  margin-right: 20px

.input
  margin-top: 5px
  padding-right: 50px

.clear
  box-sizing: border-box

  width: 20px
  height: 20px
  color: color-text-disabled

  font-size: 18px
  font-weight: 800
  line-height: 20px

  outline: none
  cursor pointer



.actions
  margin-top: 25px
  display: flex

  > *
    margin-right: 10px

    &:last-child
      margin-right: 0

.button
  width: 100%

.warning
  box-sizing: border-box

  padding: 20px 30px
  border-radius: 5px

  margin-top: 30px

  font(h4-bold, false, false, 1)
  border: 1px solid color-text-yellow;
  color: color-text-yellow-2
  background-color: rgba(251, 188, 5, 0.15);
