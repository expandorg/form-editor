@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  box-sizing: border-box;
  position: relative
  width: 30px
  border-radius: 3px

.btn
  position: relative;

  box-sizing: border-box;
  padding: 0

  width: 30px
  height: 30px

  outline: 0
  cursor: pointer;
  background-color: transparent

  path
    stroke: color-text-heavy-blue

  &:hover
    path
      stroke: color-text-blue

.dropdown
  position: absolute

  top: 0
  left: 0

  width: 30px

  display: flex
  flex-direction: column

  z-index: 2

  border: 1px solid color-heavy-blue
  background: color-white
  border-radius: 3px

.item
  height: 30px
  border-radius: 3px
  cursor: pointer
  border-bottom: 1px solid color-heavy-blue
  border-bottom-left-radius: 0
  border-bottom-right-radius: 0

  &:last-child
    border-bottom: 0
    border-bottom-left-radius: 3px
    border-bottom-right-radius: 3px

.active
  path
    stroke: color-text-blue
    stroke-width: 2
